<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <!--When on splash screen, don't include an Android action bar-->
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="windowBackground" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="colorBackground" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>
